# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Configuration (Gmail SMTP)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Google Calendar OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/oauth2callback

# Apple Calendar OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=path/to/your/private/key.p8
APPLE_REDIRECT_URI=http://localhost:5000/oauth2callback

# Production Settings
# FLASK_ENV=production
# REDIS_URL=redis://redis:6379/0
# GOOGLE_REDIRECT_URI=https://your-domain.com/oauth2callback
# APPLE_REDIRECT_URI=https://your-domain.com/oauth2callback 